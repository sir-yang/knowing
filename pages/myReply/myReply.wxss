page {
    background: #f0f3f8;
}
.reply-type-tab {
    width: 100%;
    height: 92rpx;
    overflow: hidden;
    white-space: nowrap;
}
.tab-item {
    display: inline-block;
    width: 100rpx;
    height: 88rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #999;
    font-weight: bold;
}
.tab-item.on {
    color: #278ae2;
    background: #fff;
}
.tab-item:last-child {
    margin-right: 0;
}


.reply-item-box {
    margin-top: 20rpx;
    padding: 30rpx 20rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    border-bottom: 1px solid #e9e9e9;
}
.reply-item-box:last-child {
    border-bottom: none;
}
.reply-item-box .head-icon {
    display: block;
    width: 64rpx;
    height: 64rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.reply-item-box .img-box image {
    display: block;
    width: 155rpx;
    height: 155rpx;
    margin-right: 18rpx;
    margin-bottom: 18rpx;
}
.reply-item-box .img-box image:nth-child(4n) {
    margin-right: 0;
}

.time-box {
    width: 240rpx;
    font-size: 24rpx;
    color: #999;
}
.money-box {
    font-size: 24rpx;
    color: #ff6600;
}
.money-box > image {
    display: block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 5rpx;
}