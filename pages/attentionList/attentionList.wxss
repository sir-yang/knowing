page {
    background: #f0f3f8;
}
.attention-item-box {
    margin-top: 25rpx;
    padding: 20rpx;
    background: #fff;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    border-radius: 10rpx;
}
.attention-item-box .head-img {
    display: block;
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}
.attention-status {
    width: 110rpx;
    height: 42rpx;
    border: 1px solid #e3e3e3;
    border-radius: 21rpx;
    box-sizing: border-box;
    font-size: 20rpx;
    color: #339933;
    text-align: center;
    line-height: 42rpx;
}