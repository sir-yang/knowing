Page {
    background: #f0f3f8;
}

/* 搜索样式 */
@import "/pages/common/searchTop.wxss";

/* banner */
.banner-box {
    width: 100%;
    height: 375rpx;
    margin-top: 15rpx;
    border-radius: 10rpx;
}

.banner-box image {
    height: 375rpx;
    border-radius: 10rpx;
}

.tab-box {
    margin-top: 20rpx;
    padding: 20rpx 25rpx 0;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}

.tab-item {
    width: 150rpx;
    height: 72rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 5rpx;
    border: 1px solid #e3e3e3;
    box-sizing: border-box;
    line-height: 72rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
}
.tab-item:nth-child(4n) {
    margin-right: 0;
}
.tab-item.on {
    color: #278ae2;
    border: 1px solid #278ae2;
}


.zhishi-list-box {
    padding-bottom: 20rpx;
}
.list-item {
    margin-top: 25rpx;
    padding: 20rpx 25rpx;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    background: #fff;
}

.list-item > image {
    display: block;
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}