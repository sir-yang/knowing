<view class='tankuang'></view>
<view class='login-modal-content'>
    <form report-submit='true' bindsubmit=''>
        <view class='modal-title'>注册</view>
        <view class='input-box flex_start flex_items'>
            <label>手机号码</label>
            <input class='rt-ipt' type='number' placeholder-class='c9' placeholder='请输入手机号码' />
        </view>
        <view class='input-box flex_start flex_items'>
            <label>新密码</label>
            <input class='rt-ipt' type='text' placeholder-class='c9' placeholder='请输入密码' />
        </view>
        <view class='input-box flex_start flex_items'>
            <label>确认密码</label>
            <input class='rt-ipt' type='text' placeholder-class='c9' placeholder='请确认密码' />
        </view>
        <view class='input-box flex_start flex_items'>
            <label>短信验证码</label>
            <view class='flex1 flex_start bbe9s pos'>
                <input class='verification-ipt' type='text' placeholder-class='c9' placeholder='请输入短信验证码' />
                <view class='send-code-btn'>发送验证码</view>
            </view>
        </view>

        <view class='input-box flex_start flex_items'>
            <label>您的身份</label>
            <view class='flex1 flex_start flex_items'>
                <view class='flex_start flex_items' bindtap='registIdentity' data-index='1'>
                    <view class='circle {{identity == 1 ? "on" : ""}}'></view>
                    <view class='f28 c3 ml10'>学生</view>
                </view>
                <view class='flex_start flex_items ml30' bindtap='registIdentity' data-index='2'>
                    <view class='circle {{identity == 2 ? "on" : ""}}'></view>
                    <view class='f28 c3 ml10'>教师</view>
                </view>
                <view class='flex_start flex_items ml30' bindtap='registIdentity' data-index='3'>
                    <view class='circle {{identity == 3 ? "on" : ""}}'></view>
                    <view class='f28 c3 ml10'>其他</view>
                </view>
            </view>
        </view>

        <button form-type='submit' class='modal-btn'>注册</button>
        <view class='flex_end f24 c6'>已有账号？去<text class='cmain'>登录</text></view>
    </form>
</view>