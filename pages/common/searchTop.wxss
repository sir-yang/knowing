.top-search-box {
    margin-top: 10rpx;
}
.switch-box {
    position: relative;
    max-width: 200rpx;
}
.down-arrow {
    position: absolute;
    top: 15rpx;
    right: 0;
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
    border-color: #4a4e57 transparent transparent transparent;
}
.search-input {
    /* margin: 0 30rpx; */
    height: 66rpx;
    line-height: 66rpx;
    background: #e8e8e8;
    -webkit-border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    -o-border-radius: 5rpx;
    border-radius: 5rpx;
}
.search-input > input {
    flex: 1;
    padding: 0 20rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #333;
}
.search-input > image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 30rpx;
}
.right-msg {
    width: 32rpx;
    height: 32rpx;
}
.right-msg > image {
    display: block;
    width: 100%;
    height: 100%;
}