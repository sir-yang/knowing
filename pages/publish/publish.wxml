<view class='plr20'>
    <view class='reply-info-box'>
        <!-- 类型 -->
        <view class='flex_warp'>
            <view class='top-tab-item {{tabIndex == 0 ? "on" : ""}}' bindtap='publishEvent' data-types="tab" data-index="0">读研</view>
            <view class='top-tab-item {{tabIndex == 1 ? "on" : ""}}' bindtap='publishEvent' data-types="tab" data-index="1">留学</view>
            <view class='top-tab-item {{tabIndex == 2 ? "on" : ""}}' bindtap='publishEvent' data-types="tab" data-index="2">求职</view>
            <view class='top-tab-item {{tabIndex == 3 ? "on" : ""}}' bindtap='publishEvent' data-types="tab" data-index="3">竞赛</view>
            <view class='top-tab-item {{tabIndex == 4 ? "on" : ""}}' bindtap='publishEvent' data-types="tab" data-index="4">其他</view>
        </view>

        <!-- 音频 -->
        <view class='flex_start flex_items mt30'>
            <image class='recording-icon flex_shrink' src='/images/recording_icon.png'></image>
            <view class='right-audio-box flex1 flex_start flex_items'>
                <image class='flex_shrink' src='/images/audio_icon.png'></image>
                <view class='flex1'>
                    <view class='flex_between flex_items mb10'>
                        <view class='f20 c3'>知士回答.mp3</view>
                        <view class='f20 color-red'>删除</view>
                    </view>
                    <view class='flex_start flex_items'>
                        <view class='f18 c9 mr20'>00:00</view>
                        <progress class='flex1' percent='20' stroke-width="2" activeColor="#2889e2" backgroundColor="#edeaff"></progress>
                        <view class='f18 c9 ml20'>02:38</view>
                    </view>
                </view>
            </view>
        </view>

        <!-- 文字 -->
        <textarea class='reply-ipt' placeholder-class='f9' placeholder='我要分享'></textarea>

        <!-- 图片 -->
        <view class='flex_start mt20'>
            <view class='add-pic-btn'>添加图片</view>
            <view class='flex1 flex_warp'>
                <view class='pic-box'>
                    <view class='remove-img'>X</view>
                    <image src='http://img.my.csdn.net/uploads/201407/26/1406383165_7197.jpg'></image>
                </view>
                <view class='pic-box'>
                    <view class='remove-img'>X</view>
                    <image src='http://img.my.csdn.net/uploads/201407/26/1406383165_7197.jpg'></image>
                </view>
                <view class='pic-box'>
                    <view class='remove-img'>X</view>
                    <image src='http://img.my.csdn.net/uploads/201407/26/1406383165_7197.jpg'></image>
                </view>
            </view>
        </view>

        <view class='choose-tutor-box flex_start'>
            <view class='tutor-left'>选择审核导师</view>
            <view class='flex1'>
                <view class='right-box flex_start flex_items' bindtap='publishEvent' data-types='showTutor'>
                    <input class='flex1 f24 c3' type='text' disabled placeholder='请选择分享导师' />
                    <image class='down-icon' src='/images/down_icon.png'></image>
                </view>
                <view class='mt20'>
                    <block wx:for="{{checkList}}" wx:key="">
                        <view wx:if="{{item.checked}}" class='tutor-item flex_between'>
                            <view>{{item.value}}</view>
                            <view class='close' bindtap='publishEvent' data-types='removeTutor' data-id='{{item.id}}'>X</view>
                        </view>
                    </block>
                    <!-- <view class='tutor-item'>何茜阿</view>
                    <view class='tutor-item'>何茜阿</view> -->
                </view>
            </view>
        </view>

    </view>
    <!-- 底部悬浮 -->
    <view class='footer-spacing'></view>
    <view class='footer-tab-box'>
        <form report-submit='true' bindsubmit=''>
            <view class='flex_start'>
                <view class='footer-left-btn'>暂存</view>
                <button form-type='submit' class='submit-btn'>提交</button>
            </view>
        </form>
    </view>
</view>

<view class='tankuang {{tutorTk}}'></view>
<view class='checkbox-box {{tutorTk}}'>
    <view class='closeTk' bindtap='publishEvent' data-types='closeTk'>X</view>
    <view class='flex_warp'>
        <view class='flex_start flex_items' wx:for="{{checkList}}" wx:key="" bindtap='publishEvent' data-types='tutor' data-index='{{index}}'>
            <view class='circle {{item.checked ? "on" : ""}}'></view>
            <view class='f28 c3 ml10'>{{item.value}}</view>
        </view>
    </view>
</view>