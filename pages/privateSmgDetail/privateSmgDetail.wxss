page {
    background: #f0f3f8;
}

.time-box {
    display: inline-block;
    height: 48rpx;
    padding: 0 25rpx;
    margin-top: 30rpx;
    line-height: 48rpx;
    border-radius: 24rpx;
    font-size: 24rpx;
    color: #fff;
    background: #ccc;
}

.head-img {
    display: block;
    width: 72rpx;
    height: 72rpx;
    border-radius: 10rpx;
}

.content-msg {
    position: relative;
    padding: 15rpx 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.1);
    z-index: 10;
    font-size: 24rpx;
    line-height: 42rpx;
    text-align: left;
}

.content-msg::before {
    display: block;
    content: '';
    position: absolute;
    top: 26rpx;
    z-index: 9;
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
}

.left-msg .content-msg {
    margin-right: 94rpx;
    background: #fff;
    color: #333;
}
.left-msg .content-msg::before {
    left: -20rpx;
    border-color: transparent #fff transparent transparent;
}
.right-msg .content-msg {
    margin-left: 94rpx;
    background: #278ae2;
    color: #fff;
}
.right-msg .content-msg::before {
    right: -20rpx;
    border-color: transparent transparent transparent #278ae2;
}

.comment-ipt-spacing {
    width: 100%;
    height: 95rpx;
}
.comment-ipt {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #f4f4f6;
    border-top: 1px solid #e3e3e3;
}

.comment-ipt input,
.comment-ipt button {
    height: 64rpx;
    margin-top: 12rpx;
    border-radius: 6rpx;
}
.comment-ipt input {
    flex: 1;
    width: 572rpx;
    padding: 0 10rpx;
    background: #fff;
    border: 1px solid #e9e9e9;
    font-size: 24rpx;
    color: #333;
    text-align: left;
}
.comment-ipt button {
    width: 120rpx;
    margin-left: 20rpx;
    background: #268de1;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    line-height: 64rpx;
}
