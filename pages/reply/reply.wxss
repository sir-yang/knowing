page {
    background: #f0f3f8;
}
.reply-info-box {
    margin-top: 20rpx;
    padding: 40rpx 20rpx 22rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}
.recording-icon {
    display: block;
    width: 31rpx;
    height: 43rpx;
    margin-right: 120rpx;
}
.right-audio-box > image {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 15rpx;
}

.reply-ipt {
    margin-top: 50rpx;
    width: 100%;
    height: 240rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #333;
}

.add-pic-btn {
    width: 130rpx;
    height: 52rpx;
    margin-right: 30rpx;
    border-radius: 26rpx;
    background: #f0f0f0;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    line-height: 52rpx;
}
.add-pic-btn + view {
    min-height: 200rpx;
}
.pic-box {
    position: relative;
    width: 156rpx;
    height: 156rpx;
    margin-right: 18rpx;
    margin-bottom: 18rpx;
}
.pic-box:nth-child(3n) {
    margin-right: 0;
}
.pic-box > image {
    display: block;
    width: 100%;
    height: 100%;
}
.pic-box .remove-img {
    position: absolute;
    top: 0;
    right: 0;
    width: 24rpx;
    height: 24rpx;
    background: rgba(0, 0, 0, .26);
    font-size: 20rpx;
    color: #fff;
    line-height: 24rpx;
    text-align: center;
}

/* 围观金额 */
.onlookers-money-box {
    margin-top: 20rpx;
    padding: 25rpx 20rpx 30rpx;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    background: #fff;
}
.onlookers-money-box .tit {
    font-size: 24rpx;
    color: #a0a0a0;
}
.onlookers-money-item {
    position: relative;
    width: 160rpx;
    height: 56rpx;
    margin-top: 20rpx;
    margin-right: 10rpx;
    border-radius: 6rpx;
    border: 1rpx solid #e3e3e3;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    line-height: 56rpx;
    box-sizing: border-box;
}
.onlookers-money-item:nth-child(4n) {
    margin-right: 0;
}
.onlookers-money-item > image {
    display: none;
    position: absolute;
    right: 0;
    bottom: 0;
    width: 35rpx;
    height: 35rpx;
}
.onlookers-money-item.on {
    border: 1rpx solid #278ae2;
    color: #278ae2;
}
.onlookers-money-item.on > image {
    display: block;
}


/* 底部悬浮 */
.footer-tab-box-spacing {
    width: 100%;
    height: 110rpx;
}
.footer-tab-box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 87rpx;
}
.footer-left-btn {
    width: 270rpx;
    height: 87rpx;
    line-height: 87rpx;
    background: #fff;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    border-top: 1px solid #e3e3e3;
}
.submit-btn {
    flex: 1;
    border-top: 1px solid #278ae2;
    background: #278ae2;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 87rpx;
}