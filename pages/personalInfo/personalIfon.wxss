page {
    background: #f0f3f8;
}

.base-info-box {
    margin-bottom: 20rpx;
    padding: 0 20rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}
.base-info-box > view {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #040404;
    border-bottom: 1px solid #e3e3e3;
}
.base-info-box > view:last-child {
    border-bottom: none;
}
.base-info-box > view input {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: right;
}

.base-info-box .desc {
    border-bottom: none;
}
.base-info-box textarea {
    width: 100%;
    height: 210rpx;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #333;
}

.footer-spacing {
    width: 100%;
    height: 88rpx;
}
.save-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    background: #278ae2;
}