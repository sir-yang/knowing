Page {
    background: #f0f3f8;
}
.course-page-box {
    padding: 25rpx 20rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}

.course-tit {
    margin-bottom: 38rpx;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #040404;
    border-bottom: 1px solid #e3e3e3;
}

.audio-box {
    padding: 20rpx;
    border: 1px solid #e9e9e9;
    border-radius: 10rpx;
}
.audio-img {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}

.detail-box {
    width: 100%;
    margin-top: 20rpx;
    padding: 30rpx 20rpx;
    border-radius: 10rpx;
    background: #e3e3e3;
    box-sizing: border-box;
}

