Page {
    background: #f0f3f8;
}

.top-search-box {
    margin-top: 10rpx;
}
.switch-box {
    position: relative;
    max-width: 200rpx;
}
.down-arrow {
    position: absolute;
    top: 15rpx;
    right: 0;
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
    border-color: #4a4e57 transparent transparent transparent;
}
.search-input {
    margin: 0 30rpx;
    height: 66rpx;
    line-height: 66rpx;
    background: #e8e8e8;
    -webkit-border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    -o-border-radius: 5rpx;
    border-radius: 5rpx;
}
.search-input > input {
    flex: 1;
    padding: 0 20rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #333;
}
.search-input > image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 30rpx;
}
.right-msg {
    width: 32rpx;
    height: 32rpx;
}
.right-msg > image {
    display: block;
    width: 100%;
    height: 100%;
}

/* 筛选 */
.filter-type-box {
    margin-top: 20rpx;
}
.filter-type-box .type-item {
    width: 104rpx;
    height: 88rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #999;
}
.filter-type-box .type-item.on {
    background: #fff;
    color: #278ae2;
}
.filter-type-box .type-item:first-child {
    margin-left: 0;
}
.ask-question {
    width: 88rpx;
    height: 88rpx;
    background: #278ae2;
    border-radius: 50%;
    text-align: center;
    line-height: 88rpx;
    font-size: 26rpx;
    color: #fff;
}

.sort-box {
    margin-top: 20rpx;
    padding: 0 40rpx 0 20rpx;
    height: 82rpx;
    line-height: 82rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
    font-size: 26rpx;
    color: #999;
}

.sort-box .sort-item {
    position: relative
}
.sort-box .sort-item.on {
    color: #333;
}
.sort-box .sort-item::before {
    position: absolute;
    top: 30rpx;
    right: -20rpx;
    display: block;
    content: '';
    width: 0;
    height: 0;
    border-width: 6rpx;
    border-style: solid;
    border-color: transparent transparent #999 transparent;
}
.sort-box .sort-item::after {
    position: absolute;
    bottom: 25rpx;
    right: -20rpx;
    display: block;
    content: '';
    width: 0;
    height: 0;
    border-width: 6rpx;
    border-style: solid;
    border-color: #999 transparent transparent transparent;
}
.sort-box .sort-item.on::before {
    border-color: transparent transparent #4a4e57 transparent;
}
.sort-box .sort-item.on::after {
    border-color: #4a4e57 transparent transparent transparent;
}

.list-item {
    margin-top: 20rpx;
    padding: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}

.list-item-head {
    display: block;
    width: 65rpx;
    height: 65rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.answer-text {
    font-size: 26rpx;
    color: #ff6600;
}

.img-box image {
    display: block;
    width: 155rpx;
    height: 155rpx;
    margin-right: 19rpx;
    margin-top: 19rpx;
}
.img-box image:nth-child(4n) {
    margin-right: 0;
}

.time-box {
    width: 175rpx;
    font-size: 24rpx;
    color: #999;
}
.money-box {
    font-size: 24rpx;
    color: #ff6600;
}
.money-box > image {
    display: block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 5rpx;
}

.onlookers-modal-content {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 500;
}

.onlookers-modal-content .look-btn {
    line-height: 98rpx;
    text-align: center;
    font-size: 28rpx;
    color: #333;
}

.poster-modal-content{
    position: fixed;
    top: 50%;
    left: 50%;
    width: 650rpx;
    transform: translate(-50%, -50%);
    z-index: 500;
}
.poster-modal-content .poster-img {
    width: 100%;
    height: 848rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}
.poster-modal-content .poster-img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.poster-modal-content .save-photo-btn {
    width: 100%;
    height: 78rpx;
    background: #ff3300;
    border-radius: 10rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}