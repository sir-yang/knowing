
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 200rpx;
}

.userinfo-avatar {
    display: block;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #aaa;
}

.backImg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.get-userinfo-btn,
.enter-use-btn {
    position: absolute;
    left: 50%;
    bottom: 200rpx;
    transform: translateX(-50%);
    width: 260rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    border: 1px solid #e3e3e3;
    border-radius: 10rpx;
}

.load-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: #fff;
}

.load-modal-content {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
}

.load-modal-content image {
    width: 100%;
    height: 100%;
}