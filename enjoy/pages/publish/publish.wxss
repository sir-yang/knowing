@import "/pages/common/replyAsk.wxss";

.reply-info-box {
    padding: 40rpx 20rpx 50rpx;
}

.top-tab-item {
    width: 150rpx;
    height: 72rpx;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
    text-align: center;
    line-height: 72rpx;
    box-sizing: border-box;
    font-size:  24rpx;
    color: #999;
    border-radius: 5rpx;
    border: 1px solid #e3e3e3;
}
.top-tab-item:nth-child(4n) {
    margin-right: 0;
}
.top-tab-item.on {
    color: #278ae2;
    border: 1px solid #278ae2;
}

.tutor-left {
    width: 160rpx;
    line-height: 66rpx;
    font-size: 24rpx;
    color: #666;
}

.tutor-item {
    position: relative;
    display: inline-block;
    min-width: 123rpx;
    height: 48rpx;
    margin-top: 10rpx;
    margin-right: 20rpx;
    padding: 0 50rpx 0 20rpx;
    line-height: 48rpx;
    background: #dadada;
    font-size: 24rpx;
    color: #666;
    border-radius: 24rpx;
    box-sizing: border-box;
}
.tutor-item .close {
    position: absolute;
    top: 0;
    right: 20rpx;
    font-size: 24rpx;
    color: #999;
    z-index: 1;
}

.right-box {
    height: 66rpx;
    padding: 0 10rpx 0 25rpx;
    border-radius: 10rpx;
    border: 1px solid #e3e3e3;
}
.right-box input {
    height: 66rpx;
    line-height: 66rpx;
    margin-right: 10rpx;
}
.down-icon {
    display: block;
    width: 20rpx;
    height: 10rpx;
}

.checkbox-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 30rpx;
    background: #fff;
    z-index: 500;
    box-sizing: border-box;
    max-height: 500rpx;
    overflow-y: auto;
}

.checkbox-box .closeTk {
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    border: 1px solid #e3e3e3;
    text-align: center;
    line-height: 30rpx;
    font-size: 24rpx;
    color: red;
    background: #fff;
}

.checkbox-content-box{
    min-height: 280rpx;
    max-height: 54rpx;
    overflow-y: auto; 
}
.checkbox-box .flex_warp > view {
    margin: 20rpx 15rpx;
}
.circle {
    position: relative;
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    border: 1px solid #e3e3e3;
}
.circle.on {
    background: #278ae2;
    border: 1px solid #278ae2;
}
.circle.on::after {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 14rpx;
    height: 14rpx;
    transform: translate(-50%, -50%);
    background: #fff;
    border-radius: 50%;
}


.footer-spacing {
    width: 100%;
    height: 108rpx;
}