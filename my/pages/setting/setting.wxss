page {
    background: #f0f3f8;
}

.setting-box {
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .1);
}
.setting-box > view {
    padding: 0 20rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1px solid #e3e3e3;
    font-size: 28rpx;
    color: #040404;
}
.setting-box > view:last-child {
    border-bottom: none;
}
.setting-box .more-right-icon {
    display: block;
    width: 32rpx;
    height: 8rpx;
}

.msg {
    position: relative;
}
.msg::after {
    display: block;
    content: '';
    position: absolute;
    top: 30rpx;
    right: -10rpx;
    width: 10rpx;
    height: 10rpx;
    background: #fc2502;
    border-radius: 50%;
}